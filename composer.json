{
    "name": "keboola/db-extractor-firebird",
    "license": "MIT",
    "type": "Application",
    "description": "Reads data from Mysql databases for keboola connection",
    "authors": [
        {
            "name": "Keboola Dev",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "keboola/db-extractor-common": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "6.*"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\DbExtractor\\Tests\\": "tests/Keboola/DbExtractor"
        }
    },
    "scripts": {
        "firebirdTests": "./vendor/bin/phpunit --testsuite FirebirdTests",
        "runTests": "./vendor/bin/phpunit --testsuite RunTests",
        "build": [
            "@firebirdTests",
            "@runTests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    }
}
